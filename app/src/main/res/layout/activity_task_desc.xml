<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".taskDescActivity">

    <!-- Titre de la tâche -->
    <TextView
        android:id="@+id/task_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Description de la tâche -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_description"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_description" />

        <TextView
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_description"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <!-- Date de début -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/icon_calendar_start"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_calendar" />

        <TextView
            android:id="@+id/task_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_calendar_start"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <!-- Date de fin -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/icon_calendar_end"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_calendar" />

        <TextView
            android:id="@+id/task_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_calendar_end"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <!-- Contexte -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/icon_context"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_contexte" />

        <TextView
            android:id="@+id/task_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_context"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:gravity="center_vertical" />

    </RelativeLayout>

    <!-- Lien -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/icon_lien"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_lien" />

        <TextView
            android:id="@+id/task_lien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon_lien"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:autoLink="web"
            android:gravity="center_vertical" />

    </RelativeLayout>

</LinearLayout>
